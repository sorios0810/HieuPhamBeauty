<!--== Start Đăng ký dịch vụ ==-->
<section class="contact-area contact-page-area">
    <div class="container">
        <div class="row contact-page-wrapper">
            <div class="col-lg-6">
                <div class="contact-form-wrap">
                    <div class="contact-form-title">
                        <h5 class="sub-title">Đăng ký dịch vụ!</h5>
                        <h2 class="title">Đăng ký sớm! Để nhận nhiều ưu đãi.</h2>
                    </div>
                    <div class="contact-form regService-form">
                        <div class="row row-gutter-20">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input class="form-control" type="text" name="name" id="txtName" placeholder="Họ tên">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input class="form-control" type="tel" name="phone" id="txtPhone" placeholder="Số điện thoại">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <select id="frm_state" class="form-select form-control" aria-label="-- Dịch vụ cần làm --">
                                        <option disabled selected>Dịch vụ cần làm</option>
                                        <option value="1">Dịch vụ 1</option>
                                        <option value="2">Dịch vụ 2</option>
                                        <option value="3">Dịch vụ 3</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input class="form-control" type="text" name="date" id="txtDate" placeholder="Ngày đăng ký" />
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group mb--0">
                                    <textarea class="form-control" style="height: 200px" name="message" placeholder="Chú thích (Không bắt buộc)"></textarea>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group mb--0">
                                    <button class="btn-theme" id="btnSubmit" type="submit">Đăng ký ngay</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--== Message Notification ==-->
                    <div class="form-message"></div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="contact-info-list">
                    <div class="thumb thumb-scale-hover-style">
                        <a href="single-product.html">
                            <img src="~/Content/img/photos/divider-01.jpg" class="hover-img" />
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--== End Đăng ký dịch vụ ==-->